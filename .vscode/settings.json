{
  "task.allowAutomaticTasks": "on",
  "terminal.integrated.confirmOnExit": "never",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "security.workspace.trust.enabled": false,

  "chat.agent.maxRequests": 50,
  "chat.tools.terminal.autoApprove": {
    "all": true,
    "cd": true,
    "echo": true,
    "ls": true,
    "pwd": true,
    "cat": true,
    "head": true,
    "tail": true,
    "findstr": true,
    "wc": true,
    "tr": true,
    "cut": true,
    "cmp": true,
    "which": true,
    "basename": true,
    "dirname": true,
    "realpath": true,
    "readlink": true,
    "stat": true,
    "file": true,
    "du": true,
    "df": true,
    "sleep": true,
    
    // Git commands
    "git status": true,
    "git log": true,
    "git show": true,
    "git diff": true,
    "git add": true,
    "git commit": true,
    "git push": true,
    "git pull": true,
    "git checkout": true,
    "git branch": true,
    
    // PowerShell commands
    "Get-ChildItem": true,
    "Get-Content": true,
    "Get-Date": true,
    "Get-Random": true,
    "Get-Location": true,
    "Write-Host": true,
    "Write-Output": true,
    "Split-Path": true,
    "Join-Path": true,
    "Start-Sleep": true,
    "Where-Object": true,
    "/^Select-[a-z0-9]/i": true,
    "/^Measure-[a-z0-9]/i": true,
    "/^Compare-[a-z0-9]/i": true,
    "/^Format-[a-z0-9]/i": true,
    "/^Sort-[a-z0-9]/i": true,
    
    // File operations
    "mkdir": true,
    "touch": true,
    "cp": true,
    "mv": true,
    "New-Item": true,
    "Copy-Item": true,
    "Move-Item": true,
    
    // Node.js and package managers
    "node": true,
    "npm": true,
    "npx": true,
    "yarn": true,
    "pnpm": true,
    "/^npm\\s+(install|i|update|run|start|test|build)/": true,
    "/^yarn\\s+(install|add|upgrade|run|start|test|build)/": true,
    "/^pnpm\\s+(install|add|update|run|start|test|build)/": true,
    
    // Server commands
    "nodemon": true,
    "pm2": true,
    "/^pm2\\s+(start|stop|restart|list|logs|monit)/": true,
    
    // Database commands
    "mysql": true,
    "psql": true,
    "mongo": true,
    "mongosh": true,
    "redis-cli": true,
    "/^mysql\\s+-u/": true,
    "/^psql\\s+-U/": true,
    
    // Testing commands
    "jest": true,
    "mocha": true,
    "vitest": true,
    "playwright": true,
    "/^npm\\s+test/": true,
    "/^yarn\\s+test/": true,
    "/^npx\\s+jest/": true,
    "/^npx\\s+mocha/": true,
    "/^npx\\s+playwright/": true,
    
    // Puppeteer
    "/^node\\s+.*puppeteer/": true,
    "/^npx\\s+puppeteer/": true,
    
    // Build and development tools
    "tsc": true,
    "webpack": true,
    "vite": true,
    "rollup": true,
    "/^npx\\s+tsc/": true,
    
    // Linting and formatting
    "eslint": true,
    "prettier": true,
    "/^npx\\s+eslint/": true,
    "/^npx\\s+prettier/": true,
    
    // Utility commands
    "column": true,
    "/^column\\b.*-c\\s+[0-9]{4,}/": false,
    "date": true,
    "/^date\\b.*(-s|--set)\\b/": false,
    "find": true,
    "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": false,
    "grep": true,
    "/^grep\\b.*-(f|P)\\b/": false,
    "sort": true,
    "/^sort\\b.*-(o|S)\\b/": false,
    "tree": true,
    "/^tree\\b.*-o\\b/": false,
    
    // Security restrictions - manter algumas proteções básicas
    "/\\(.+\\)/": { "approve": false, "matchCommandLine": true },
    "/\\{.+\\}/": { "approve": false, "matchCommandLine": true },
    "/`.+`/": { "approve": false, "matchCommandLine": true },
    "rm": false,
    "rmdir": false,
    "del": false,
    "Remove-Item": false,
    "ri": false,
    "rd": false,
    "erase": false,
    "dd": false,
    "kill": false,
    "ps": false,
    "top": false,
    "Stop-Process": false,
    "spps": false,
    "taskkill": false,
    "taskkill.exe": false,
    "eval": false,
    "Invoke-Expression": false,
    "iex": false
  }

}